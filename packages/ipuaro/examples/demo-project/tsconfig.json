{
    "compilerOptions": {
        "target": "ES2023",
        "module": "ESNext",
        "lib": ["ES2023"],
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "rootDir": "src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "tests"]
}
