        "@types/react": "^18.2.0",
        "@vitest/coverage-v8": "^1.6.0",
        "@vitest/ui": "^1.6.0",
        "jsdom": "^27.2.0",
        "react-dom": "18.3.1",
        "tsup": "^8.3.5",
        "typescript": "^5.7.2",
        "vitest": "^1.6.0"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "keywords": [
        "ai",
        "agent",
        "codebase",
        "llm",
        "ollama",
        "cli",
        "terminal"
